defmodule Mover do
  def move_head(direction, {{hx, hy}, {tx, ty}, visited} = all) do
    case direction do
      "U" ->
        {hnx, hny} = {hx, hy - 1}
        {tnx, tny} = move_tail(all)
        {{hnx, hny}, {tnx, tny}, MapSet.put(visited, {tnx, tny})}

      "D" ->
        {hnx, hny} = {hx, hy + 1}
        {tnx, tny} = move_tail(all)
        {{hnx, hny}, {tnx, tny}, MapSet.put(visited, {tnx, tny})}

      "L" ->
        {hnx, hny} = {hx - 1, hy}
        {tnx, tny} = move_tail(all)
        {{hnx, hny}, {tnx, tny}, MapSet.put(visited, {tnx, tny})}

      "R" ->
        {hnx, hny} = {hx + 1, hy}
        {tnx, tny} = move_tail(all)
        {{hnx, hny}, {tnx, tny}, MapSet.put(visited, {tnx, tny})}
    end
  end

  def move_tail({{hx, hy}, {tx, ty}, _}) do
    dr = hx - tx
    dc = hy - ty

    cond do
      Kernel.abs(dr) <= 1 and Kernel.abs(dc) <= 1 ->
        {tx, ty}

      Kernel.abs(dr) >= 2 and Kernel.abs(dc) >= 2 ->
        {if(tx < hx, do: hx - 1, else: hx + 1), if(ty < hy, do: hy - 1, else: hy + 1)}

      Kernel.abs(dr) >= 2 ->
        {if(tx < hx, do: hx - 1, else: hx + 1), hy}

      Kernel.abs(dc) >= 2 ->
        {hx, if(ty < hy, do: hy - 1, else: hy + 1)}

      true ->
        IO.puts("WAT")
        {tx, ty}
    end
  end
end

